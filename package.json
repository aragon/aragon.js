{
  "name": "node-aragon",
  "version": "0.0.0-development",
  "description": "A JavaScript library for interacting with Aragon",
  "main": "build/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "commit": "git-cz",
    "test": "nyc --all ava",
    "prepublish": "babel -d build src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/node-aragon.git"
  },
  "keywords": [
    "ethereum",
    "aragon",
    "web3",
    "client",
    "blockchain"
  ],
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/aragon/node-aragon/issues"
  },
  "homepage": "https://github.com/aragon/node-aragon#readme",
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "nyc": "^11.2.1",
    "semantic-release": "^7.0.2"
  },
  "dependencies": {
    "aragon-core": "0.0.0",
    "debug": "^3.0.0",
    "rxdb": "^5.2.1",
    "rxjs": "^5.4.2",
    "web3": "^1.0.0-beta.16"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
