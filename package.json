{
  "name": "@aragon/node-aragon",
  "version": "1.1.0",
  "description": "A JavaScript library for interacting with Aragon",
  "main": "wrapper.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "standard && flow src",
    "postlint": "documentation lint src",
    "test": "nyc --all ava",
    "build": "babel -d build src",
    "prepublish": "env NODE_ENV=production npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aragon/node-aragon.git"
  },
  "keywords": [
    "ethereum",
    "aragon",
    "web3",
    "client",
    "blockchain"
  ],
  "author": "Aragon Institution MTU <contact@aragon.one>",
  "contributors": [
    "Oliver Nordbjerg <oliver@aragon.one>"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/aragon/node-aragon/issues"
  },
  "homepage": "https://github.com/aragon/node-aragon#readme",
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "coveralls": "^2.13.1",
    "documentation": "^5.3.3",
    "eslint-plugin-flowtype": "^2.39.1",
    "flow-bin": "^0.57.3",
    "ganache-core": "^1.1.3",
    "nyc": "^11.2.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "aragon-core": "0.0.0",
    "babel-core": "^6.26.0",
    "debug": "^3.0.0",
    "ethereum-ens": "^0.7.3",
    "ipfs-api": "^14.3.5",
    "rxdb": "^5.2.1",
    "rxjs": "^5.4.2",
    "stream-to-string": "^1.1.0",
    "uuid": "^3.1.0",
    "web3": "^1.0.0-beta.16"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": [
      "build",
      "test/helpers"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
